<div id="sign-in">
  <h6>Sign In with your Givey account</h6>
  <%= form_for @user, as: :me, url: session_path do |f| %>
    <%= f.text_field :email %>
    <%= f.password_field :password %>
    <%= f.check_box :remember_me %>
    <%= f.submit 'Sign In', class: 'button' %>
  <%- end -%>
  <a href="/password/new/" class="password">Forgotten Password?</a>
</div>
