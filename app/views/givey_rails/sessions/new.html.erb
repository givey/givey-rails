<section class="clearfix center">
  <div id="sign-in">
    <h3>Sign In with your Givey account</h3>
    <%= form_for @user, as: :me, url: session_path do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.label :remember_me %>
      <%= f.check_box :remember_me %>
      <%= f.submit 'Sign In', class: 'button' %>
    <%- end -%>
    <a href="/password/new/" class="password">Forgotten Password?</a>
  </div>
</section>
